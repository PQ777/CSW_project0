{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites" : [{
      "source" : "**",
      "destination" : "/main.html"
    }]
    // Applies a CORS header for all font files
     "headers": [{
       "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
       "headers": [{
         "key": "Access-Control-Allow-Origin",
         "value": "*"
      }]
    }]
  }
}
